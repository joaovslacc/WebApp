@model IEnumerable<Database.Models.Friend>
@{
    ViewBag.Title = "Amigos";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Name)</th>
                            <th>@Html.DisplayNameFor(m => m.Phone)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var friend in Model)
                        {
                            <tr>
                                <td>@Html.DisplayTextFor(m => friend.Name)</td>
                                <td>@Html.DisplayTextFor(m => friend.PhoneNumberStrings)</td>
                                <td>
                                    <div class="btn-group pull-right">
                                        <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                            <i class="glyphicon glyphicon-cog"></i>
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown" href="/Friend/Delete/@friend.Id"><i class="glyphicon glyphicon-trash"></i> Apagar</a></li>
                                            <li><a class="dropdown" href="/Friend/Edit/@friend.Id"><i class="glyphicon glyphicon-pencil"></i> Editar</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <a href="/Friend/Edit" class="btn btn-success pull-right"><i class="glyphicon glyphicon-plus"></i> Novo Amigo</a>
            </div>
        </div>
    </div>
</div>

