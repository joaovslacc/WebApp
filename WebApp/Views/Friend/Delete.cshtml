@model Database.Models.Friend
@{
    ViewBag.Title = "Apagar Amigo";
}

<form action="/Friend/Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="well well-lg">
                <div class="row">
                    <div class="col-lg-6">
                        <strong>@Html.DisplayNameFor(m => m.Name): </strong><label>@Html.DisplayTextFor(m => m.Name)</label>
                    </div>
                    <div class="col-lg-6">
                        <strong>@Html.DisplayNameFor(m => m.Phone): </strong><label>@Html.DisplayTextFor(m => m.Phone)</label>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <a href="/Friend" class="btn btn-default"><i class="glyphicon glyphicon-share-alt"></i> Voltar</a>
                    <button type="submit" class="btn btn-danger pull-right"><i class="glyphicon glyphicon-trash"></i> Apagar</button>
                </div>
            </div>
        </div>
    </div>
</form>

