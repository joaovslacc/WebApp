<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
                <a class="navbar-brand" href="/">Controle de Games</a>
            </div>
            @if ((int?)Session["ConnectedId"] != null)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/Friend" class="navbar-link">Amigos</a></li>
                        <li><a href="/Game" class="navbar-link">Jogos</a></li>
                        <li><a href="/Game/Lending" class="navbar-link">Emprestar Jogo</a></li>
                    </ul>
                    <ul class="nav navbar-nav pull-right">
                        <li><a href="/Account/Disconnect" class="navbar-link">Sair</a></li>
                    </ul>
                </div>
            }
        </div>
    </div>

    <div class="container body-content">
        <br />
        @if ((int?)Session["ConnectedId"] != null)
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2 class="text-center">@ViewBag.Title</h2>
                </div>
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="/Scripts/jquery.maskedinput.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/shared/layout.js"></script>
</body>
</html>